{% extends 'base.html.twig' %}

{% block title %}Modifier l'article{% endblock %}

{% block body %}
<div class="container-fluid py-5 px-4" style="min-height: calc(100vh - 60px);">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="mb-0" style="color: #232946; font-family: 'Segoe UI', sans-serif; font-weight: bold; letter-spacing: 1px;">Modifier l'article</h1>
        <a href="/article" class="btn btn-outline-dark btn-lg d-flex align-items-center gap-2" style="border-radius: 10px; padding: 0.75rem 1.5rem;">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card p-5" style="border: none; border-radius: 16px; background: #f8fafc; min-height: 600px;">
                <form>
                    <div class="row g-4 mb-5">
                        <div class="col-md-4">
                            <label for="category_id" class="form-label fw-bold" style="color: #232946; font-size: 1.1rem;">Type</label>
                            <select id="category_id" class="form-control form-control-lg" required style="border-radius: 10px; padding: 0.75rem; font-size: 1.1rem;">
                                <option value="">Sélectionnez le type</option>
                                <option value="clou">Clou</option>
                                <option value="vis">Vis</option>
                                <option value="boulon">Boulon</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="nom" class="form-label fw-bold" style="color: #232946; font-size: 1.1rem;">Nom</label>
                            <input type="text" class="form-control form-control-lg" id="nom" placeholder="Modifier le nom" required style="border-radius: 10px; padding: 0.75rem; font-size: 1.1rem;">
                        </div>
                        <div class="col-md-4">
                            <label for="reference" class="form-label fw-bold" style="color: #232946; font-size: 1.1rem;">Référence</label>
                            <input type="text" class="form-control form-control-lg" id="reference" placeholder="Modifier la référence" required style="border-radius: 10px; padding: 0.75rem; font-size: 1.1rem;">
                        </div>
                    </div>
                    <div class="row g-4 mb-5">
                        <div class="col-md-4">
                            <label for="marque" class="form-label fw-bold" style="color: #232946; font-size: 1.1rem;">Marque</label>
                            <input type="text" class="form-control form-control-lg" id="marque" placeholder="Modifier la marque" required style="border-radius: 10px; padding: 0.75rem; font-size: 1.1rem;">
                        </div>
                        <div class="col-md-4">
                            <label for="unite" class="form-label fw-bold" style="color: #232946; font-size: 1.1rem;">Unité</label>
                            <input type="text" class="form-control form-control-lg" id="unite" placeholder="Modifier l'unité" required style="border-radius: 10px; padding: 0.75rem; font-size: 1.1rem;">
                        </div>
                        <div class="col-md-4">
                            <label for="prix" class="form-label fw-bold" style="color: #232946; font-size: 1.1rem;">Prix</label>
                            <input type="number" class="form-control form-control-lg" id="prix" placeholder="Modifier le prix" required style="border-radius: 10px; padding: 0.75rem; font-size: 1.1rem;">
                        </div>
                    </div>
                    <div class="row g-4 mb-5">
                        <div class="col-md-6">
                            <label for="description" class="form-label fw-bold" style="color: #232946; font-size: 1.1rem;">Description</label>
                            <input type="text" class="form-control form-control-lg" id="description" placeholder="Modifier la description" required style="border-radius: 10px; padding: 0.75rem; font-size: 1.1rem;">
                        </div>
                        <div class="col-md-3">
                            <label for="numero" class="form-label fw-bold" style="color: #232946; font-size: 1.1rem;">Numéro</label>
                            <input type="text" class="form-control form-control-lg" id="numero" placeholder="Modifier le numéro" required style="border-radius: 10px; padding: 0.75rem; font-size: 1.1rem;">
                        </div>
                        <div class="col-md-3">
                            <label for="type" class="form-label fw-bold" style="color: #232946; font-size: 1.1rem;">Type</label>
                            <input type="text" class="form-control form-control-lg" id="type" placeholder="Modifier le type" required style="border-radius: 10px; padding: 0.75rem; font-size: 1.1rem;">
                        </div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg" style="background: linear-gradient(90deg, #1e3a8a, #3b82f6); border: none; border-radius: 10px; padding: 0.75rem; font-size: 1.2rem; transition: transform 0.2s, opacity 0.2s;">
                            Enregistrer les modifications
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %} 