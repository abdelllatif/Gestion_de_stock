{% extends 'base.html.twig' %}

{% block title %}Gestion des Mécaniciens{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.7/css/dataTables.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/2.0.7/css/dataTables.bootstrap5.min.css">
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/2.0.7/js/dataTables.min.js"></script>
<script src="https://cdn.datatables.net/2.0.7/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<!-- Modal d'ajout de mécanicien -->
<div class="modal fade" id="addMecanicienModal" tabindex="-1" aria-labelledby="addMecanicienModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" style="background: linear-gradient(90deg, #1e3a8a, #3b82f6); color: white;">
        <h5 class="modal-title" id="addMecanicienModalLabel"><i class="bi bi-tools me-2"></i>Ajouter un mécanicien</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="addMecanicienForm">
          <!-- Nom -->
          <div class="mb-3">
            <label for="mecanicien_nom" class="form-label">Nom complet*</label>
            <input type="text" class="form-control" id="mecanicien_nom" name="nom" required>
          </div>
          
          <!-- Téléphone -->
          <div class="mb-3">
            <label for="mecanicien_tele" class="form-label">Numéro de téléphone*</label>
            <input type="tel" class="form-control" id="mecanicien_tele" name="tele" required>
          </div>
          
          <div class="alert alert-danger d-none" id="form-errors"></div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        <button type="button" class="btn btn-primary" id="saveMecanicienBtn">
          <i class="bi bi-save me-1"></i> Enregistrer
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Modal de modification de mécanicien -->
<div class="modal fade" id="editMecanicienModal" tabindex="-1" aria-labelledby="editMecanicienModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" style="background: linear-gradient(90deg, #0f766e, #0d9488); color: white;">
        <h5 class="modal-title" id="editMecanicienModalLabel"><i class="bi bi-pencil-square me-2"></i>Modifier le mécanicien</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="editMecanicienForm">
          <input type="hidden" id="edit_mecanicien_id" name="id">
          
          <!-- Nom -->
          <div class="mb-3">
            <label for="edit_mecanicien_nom" class="form-label">Nom complet*</label>
            <input type="text" class="form-control" id="edit_mecanicien_nom" name="nom" required>
          </div>
          
          <!-- Téléphone -->
          <div class="mb-3">
            <label for="edit_mecanicien_tele" class="form-label">Numéro de téléphone*</label>
            <input type="tel" class="form-control" id="edit_mecanicien_tele" name="tele" required>
          </div>
          
          <div class="alert alert-danger d-none" id="edit-form-errors"></div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        <button type="button" class="btn btn-primary" id="updateMecanicienBtn">
          <i class="bi bi-check-lg me-1"></i> Mettre à jour
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteMecanicienModal" tabindex="-1" aria-labelledby="deleteMecanicienModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="deleteMecanicienModalLabel"><i class="bi bi-exclamation-triangle me-2"></i>Confirmation de suppression</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Êtes-vous sûr de vouloir supprimer le mécanicien <strong id="mecanicien-to-delete-name"></strong> ?</p>
        <p class="text-danger mb-0"><i class="bi bi-exclamation-circle me-2"></i>Cette action est irréversible.</p>
        <input type="hidden" id="mecanicien-to-delete-id">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
          <i class="bi bi-trash me-1"></i> Supprimer
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Contenu principal -->
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 style="color: #232946; font-family: 'Segoe UI', sans-serif; font-weight: bold; letter-spacing: 1px;">
            <i class="bi bi-tools me-2"></i>Gestion des Mécaniciens
        </h1>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMecanicienModal">
            <i class="bi bi-plus-circle me-2"></i>Nouveau Mécanicien
        </button>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="mecaniciensTable" class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nom</th>
                            <th>Téléphone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for mecanicien in mecaniciens %}
                        <tr>
                            <td>{{ mecanicien.nom }}</td>
                            <td>{{ mecanicien.tele }}</td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{ path('app_mecanicien_show', {'id': mecanicien.id}) }}" class="btn btn-outline-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-primary edit-mecanicien" 
                                            data-id="{{ mecanicien.id }}" 
                                            data-nom="{{ mecanicien.nom }}" 
                                            data-tele="{{ mecanicien.tele }}">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                  
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="3" class="text-center py-4">
                                <i class="bi bi-inbox fs-1 d-block mb-2 text-muted"></i>
                                <p class="text-muted">Aucun mécanicien enregistré</p>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    // Initialisation de DataTables
    const table = $('#mecaniciensTable').DataTable({
        language: {
            url: 'https://cdn.datatables.net/plug-ins/1.10.24/i18n/French.json'
        },
        responsive: true,
        columnDefs: [
            { targets: -1, orderable: false } // Désactiver le tri sur la colonne des actions
        ]
    });
    
    // Gestion de l'ajout d'un mécanicien
    $('#saveMecanicienBtn').on('click', function() {
        const formData = {
            nom: $('#mecanicien_nom').val(),
            tele: $('#mecanicien_tele').val()
        };
        
        // Réinitialiser les erreurs précédentes
        $('#form-errors').addClass('d-none').html('');
        
        // Désactiver le bouton pendant la soumission
        const saveBtn = $(this);
        saveBtn.prop('disabled', true);
        saveBtn.html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Enregistrement...');
        
        $.ajax({
            url: '{{ path('app_mecanicien_new') }}',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(formData),
            success: function(response) {
                if (response.success) {
                    // Fermer le modal
                    $('#addMecanicienModal').modal('hide');
                    
                    // Réinitialiser le formulaire
                    $('#addMecanicienForm')[0].reset();
                    
                    // Afficher un message de succès
                    Swal.fire({
                        icon: 'success',
                        title: 'Succès',
                        text: 'Le mécanicien a été ajouté avec succès',
                        timer: 2000,
                        showConfirmButton: false
                    });
                    
                    // Recharger la page pour afficher le nouveau mécanicien
                    setTimeout(function() {
                        location.reload();
                    }, 1500);
                }
            },
            error: function(xhr) {
                const response = xhr.responseJSON;
                if (response && response.errors) {
                    // Afficher les erreurs dans l'alerte
                    const errorList = response.errors.map(error => `<li>${error}</li>`).join('');
                    $('#form-errors').removeClass('d-none').html(`<ul class="mb-0">${errorList}</ul>`);
                } else {
                    $('#form-errors').removeClass('d-none').html('Une erreur est survenue. Veuillez réessayer.');
                }
            },
            complete: function() {
                // Réactiver le bouton
                saveBtn.prop('disabled', false);
                saveBtn.html('<i class="bi bi-save me-1"></i> Enregistrer');
            }
        });
    });
    
    // Remplir le modal de modification avec les données du mécanicien
    $('.edit-mecanicien').on('click', function() {
        const mecanicienId = $(this).data('id');
        const mecanicienNom = $(this).data('nom');
        const mecanicienTele = $(this).data('tele');
        
        $('#edit_mecanicien_id').val(mecanicienId);
        $('#edit_mecanicien_nom').val(mecanicienNom);
        $('#edit_mecanicien_tele').val(mecanicienTele);
        
        $('#edit-form-errors').addClass('d-none').html('');
        
        $('#editMecanicienModal').modal('show');
    });
    
    // Gestion de la modification d'un mécanicien
    $('#updateMecanicienBtn').on('click', function() {
        const mecanicienId = $('#edit_mecanicien_id').val();
        
        const formData = {
            nom: $('#edit_mecanicien_nom').val(),
            tele: $('#edit_mecanicien_tele').val()
        };
        
        // Réinitialiser les erreurs précédentes
        $('#edit-form-errors').addClass('d-none').html('');
        
        // Désactiver le bouton pendant la soumission
        const updateBtn = $(this);
        updateBtn.prop('disabled', true);
        updateBtn.html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Mise à jour...');
        
        $.ajax({
            url: `/mecanicien/${mecanicienId}/edit`,
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(formData),
            success: function(response) {
                if (response.success) {
                    // Fermer le modal
                    $('#editMecanicienModal').modal('hide');
                    
                    // Afficher un message de succès
                    Swal.fire({
                        icon: 'success',
                        title: 'Succès',
                        text: 'Le mécanicien a été modifié avec succès',
                        timer: 2000,
                        showConfirmButton: false
                    });
                    
                    // Recharger la page pour afficher les modifications
                    setTimeout(function() {
                        location.reload();
                    }, 1500);
                }
            },
            error: function(xhr) {
                const response = xhr.responseJSON;
                if (response && response.errors) {
                    // Afficher les erreurs dans l'alerte
                    const errorList = response.errors.map(error => `<li>${error}</li>`).join('');
                    $('#edit-form-errors').removeClass('d-none').html(`<ul class="mb-0">${errorList}</ul>`);
                } else {
                    $('#edit-form-errors').removeClass('d-none').html('Une erreur est survenue. Veuillez réessayer.');
                }
            },
            complete: function() {
                // Réactiver le bouton
                updateBtn.prop('disabled', false);
                updateBtn.html('<i class="bi bi-check-lg me-1"></i> Mettre à jour');
            }
        });
    });
    
    // Préparer le modal de suppression
    $('.delete-mecanicien').on('click', function() {
        const mecanicienId = $(this).data('id');
        const mecanicienNom = $(this).data('nom');
        
        $('#mecanicien-to-delete-id').val(mecanicienId);
        $('#mecanicien-to-delete-name').text(mecanicienNom);
        
        $('#deleteMecanicienModal').modal('show');
    });
    
    // Gestion de la suppression d'un mécanicien
    $('#confirmDeleteBtn').on('click', function() {
        const mecanicienId = $('#mecanicien-to-delete-id').val();
        
        // Désactiver le bouton pendant la suppression
        const deleteBtn = $(this);
        deleteBtn.prop('disabled', true);
        deleteBtn.html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Suppression...');
        
        $.ajax({
            url: `/mecanicien/${mecanicienId}/delete`,
            type: 'DELETE',
            success: function(response) {
                if (response.success) {
                    // Fermer le modal
                    $('#deleteMecanicienModal').modal('hide');
                    
                    // Afficher un message de succès
                    Swal.fire({
                        icon: 'success',
                        title: 'Succès',
                        text: 'Le mécanicien a été supprimé avec succès',
                        timer: 2000,
                        showConfirmButton: false
                    });
                    
                    // Recharger la page
                    setTimeout(function() {
                        location.reload();
                    }, 1500);
                }
            },
            error: function() {
                // Fermer le modal
                $('#deleteMecanicienModal').modal('hide');
                
                // Afficher un message d'erreur
                Swal.fire({
                    icon: 'error',
                    title: 'Erreur',
                    text: 'Une erreur est survenue lors de la suppression du mécanicien',
                });
            },
            complete: function() {
                // Réactiver le bouton
                deleteBtn.prop('disabled', false);
                deleteBtn.html('<i class="bi bi-trash me-1"></i> Supprimer');
            }
        });
    });
});
</script>
{% endblock %}
