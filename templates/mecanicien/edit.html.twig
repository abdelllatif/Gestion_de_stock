{% extends 'base.html.twig' %}

{% block title %}Modifier un mécanicien{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 style="color: #232946; font-family: 'Segoe UI', sans-serif; font-weight: bold; letter-spacing: 1px;">
                    <i class="bi bi-tools me-2"></i>Modifier le mécanicien
                </h1>
                <a href="{{ path('app_mecanicien') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>
            
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form id="editMecanicienForm">
                        <input type="hidden" id="mecanicien_id" value="{{ mecanicien.id }}">
                        
                        <!-- Nom -->
                        <div class="mb-3">
                            <label for="mecanicien_nom" class="form-label">Nom complet*</label>
                            <input type="text" class="form-control" id="mecanicien_nom" name="nom" value="{{ mecanicien.nom }}" required>
                        </div>
                        
                        <!-- Téléphone -->
                        <div class="mb-3">
                            <label for="mecanicien_tele" class="form-label">Numéro de téléphone*</label>
                            <input type="tel" class="form-control" id="mecanicien_tele" name="tele" value="{{ mecanicien.tele }}" required>
                        </div>
                        
                        <div class="alert alert-danger d-none" id="form-errors"></div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a href="{{ path('app_mecanicien_show', {'id': mecanicien.id}) }}" class="btn btn-outline-secondary me-2">
                                Annuler
                            </a>
                            <button type="button" class="btn btn-primary" id="updateMecanicienBtn">
                                <i class="bi bi-check-lg me-2"></i>Enregistrer les modifications
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    $('#updateMecanicienBtn').on('click', function() {
        const mecanicienId = $('#mecanicien_id').val();
        
        const formData = {
            nom: $('#mecanicien_nom').val(),
            tele: $('#mecanicien_tele').val()
        };
        
        // Réinitialiser les erreurs précédentes
        $('#form-errors').addClass('d-none').html('');
        
        // Désactiver le bouton pendant la soumission
        const updateBtn = $(this);
        updateBtn.prop('disabled', true);
        updateBtn.html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Mise à jour...');
        
        $.ajax({
            url: `/mecanicien/${mecanicienId}/edit`,
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(formData),
            success: function(response) {
                if (response.success) {
                    // Afficher un message de succès
                    Swal.fire({
                        icon: 'success',
                        title: 'Succès',
                        text: 'Le mécanicien a été modifié avec succès',
                        timer: 2000,
                        showConfirmButton: false
                    });
                    
                    // Rediriger vers la page de détails après le succès
                    setTimeout(function() {
                        window.location.href = `/mecanicien/${mecanicienId}`;
                    }, 1500);
                }
            },
            error: function(xhr) {
                const response = xhr.responseJSON;
                if (response && response.errors) {
                    // Afficher les erreurs dans l'alerte
                    const errorList = response.errors.map(error => `<li>${error}</li>`).join('');
                    $('#form-errors').removeClass('d-none').html(`<ul class="mb-0">${errorList}</ul>`);
                } else {
                    $('#form-errors').removeClass('d-none').html('Une erreur est survenue. Veuillez réessayer.');
                }
            },
            complete: function() {
                // Réactiver le bouton
                updateBtn.prop('disabled', false);
                updateBtn.html('<i class="bi bi-check-lg me-2"></i>Enregistrer les modifications');
            }
        });
    });
});
</script>
{% endblock %}
