{% extends 'base.html.twig' %}

{% block title %}Détails du mécanicien{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Modal de modification de mécanicien -->
<div class="modal fade" id="editMecanicienModal" tabindex="-1" aria-labelledby="editMecanicienModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" style="background: linear-gradient(90deg, #0f766e, #0d9488); color: white;">
        <h5 class="modal-title" id="editMecanicienModalLabel"><i class="bi bi-pencil-square me-2"></i>Modifier le mécanicien</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="editMecanicienForm">
          <input type="hidden" id="edit_mecanicien_id" name="id" value="{{ mecanicien.id }}">
          
          <!-- Nom -->
          <div class="mb-3">
            <label for="edit_mecanicien_nom" class="form-label">Nom complet*</label>
            <input type="text" class="form-control" id="edit_mecanicien_nom" name="nom" value="{{ mecanicien.nom }}" required>
          </div>
          
          <!-- Téléphone -->
          <div class="mb-3">
            <label for="edit_mecanicien_tele" class="form-label">Numéro de téléphone*</label>
            <input type="tel" class="form-control" id="edit_mecanicien_tele" name="tele" value="{{ mecanicien.tele }}" required>
          </div>
          
          <div class="alert alert-danger d-none" id="edit-form-errors"></div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        <button type="button" class="btn btn-primary" id="updateMecanicienBtn">
          <i class="bi bi-check-lg me-1"></i> Mettre à jour
        </button>
      </div>
    </div>
  </div>
</div>

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 style="color: #232946; font-family: 'Segoe UI', sans-serif; font-weight: bold; letter-spacing: 1px;">
                    <i class="bi bi-tools me-2"></i>Détails du mécanicien
                </h1>
                <div>
                    <a href="{{ path('app_mecanicien') }}" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                    </a>
                    <button type="button" class="btn btn-outline-primary edit-mecanicien" data-bs-toggle="modal" data-bs-target="#editMecanicienModal">
                        <i class="bi bi-pencil me-2"></i>Modifier
                    </button>
                </div>
            </div>
            
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-md-1 text-center">
                            <i class="bi bi-tools text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <div class="col-md-11">
                            <h3 class="mb-0">{{ mecanicien.nom }}</h3>
                            <p class="text-muted mb-0"><small>Identifiant: #{{ mecanicien.id }}</small></p>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <h6 class="text-muted mb-1">Téléphone</h6>
                            <p class="mb-0 fs-5 fw-semibold">
                                <a href="tel:{{ mecanicien.tele }}" class="text-decoration-none">
                                    <i class="bi bi-telephone me-1"></i>{{ mecanicien.tele }}
                                </a>
                            </p>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editMecanicienModal">
                            <i class="bi bi-pencil me-2"></i>Modifier ce mécanicien
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    // Gestion de la modification d'un mécanicien
    $('#updateMecanicienBtn').on('click', function() {
        const mecanicienId = $('#edit_mecanicien_id').val();
        
        const formData = {
            nom: $('#edit_mecanicien_nom').val(),
            tele: $('#edit_mecanicien_tele').val()
        };
        
        // Réinitialiser les erreurs précédentes
        $('#edit-form-errors').addClass('d-none').html('');
        
        // Désactiver le bouton pendant la soumission
        const updateBtn = $(this);
        updateBtn.prop('disabled', true);
        updateBtn.html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Mise à jour...');
        
        $.ajax({
            url: `/mecanicien/${mecanicienId}/edit`,
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(formData),
            success: function(response) {
                if (response.success) {
                    // Fermer le modal
                    $('#editMecanicienModal').modal('hide');
                    
                    // Afficher un message de succès
                    Swal.fire({
                        icon: 'success',
                        title: 'Succès',
                        text: 'Le mécanicien a été modifié avec succès',
                        timer: 2000,
                        showConfirmButton: false
                    });
                    
                    // Recharger la page pour afficher les modifications
                    setTimeout(function() {
                        location.reload();
                    }, 1500);
                }
            },
            error: function(xhr) {
                const response = xhr.responseJSON;
                if (response && response.errors) {
                    // Afficher les erreurs dans l'alerte
                    const errorList = response.errors.map(error => `<li>${error}</li>`).join('');
                    $('#edit-form-errors').removeClass('d-none').html(`<ul class="mb-0">${errorList}</ul>`);
                } else {
                    $('#edit-form-errors').removeClass('d-none').html('Une erreur est survenue. Veuillez réessayer.');
                }
            },
            complete: function() {
                // Réactiver le bouton
                updateBtn.prop('disabled', false);
                updateBtn.html('<i class="bi bi-check-lg me-1"></i> Mettre à jour');
            }
        });
    });
});
</script>
{% endblock %}
