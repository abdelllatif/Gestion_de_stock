{% extends 'base.html.twig' %}

{% block title %}Détails du Bon{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .detail-section {
        margin-bottom: 2rem;
    }
    
    .detail-card {
        border-radius: 0.5rem;
        overflow: hidden;
    }
    
    .item-row {
        transition: background-color 0.2s;
    }
    
    .item-row:hover {
        background-color: #f8f9fa;
    }
    
    .badge-article {
        background-color: #3b82f6;
        color: white;
    }
    
    .badge-machine {
        background-color: #8b5cf6;
        color: white;
    }
    
    .badge-sortie {
        background-color: #ef4444;
        color: white;
    }
    
    .badge-entrée {
        background-color: #10b981;
        color: white;
    }
    
    .badge-livraison {
        background-color: #f59e0b;
        color: white;
    }
    
    .property-name {
        font-weight: 600;
        color: #6b7280;
    }
    
    .property-value {
        font-weight: 500;
    }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Détails du Bon <span class="text-secondary">#{{ bon.numeroSerie }}</span></h1>
        <div>
            <a href="{{ path('app_bon') }}" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left me-2"></i>Retour
            </a>
            <a href="{{ path('app_bon_edit', {'id': bon.id}) }}" class="btn btn-outline-primary me-2">
                <i class="bi bi-pencil me-2"></i>Modifier
            </a>
            <a href="{{ path('app_bon_pdf', {'id': bon.id}) }}" class="btn btn-danger" target="_blank">
                <i class="bi bi-file-earmark-pdf me-2"></i>Exporter PDF
            </a>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-5">
            <div class="card shadow-sm mb-4 detail-card">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">Informations du Bon</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="property-name">Type</div>
                            <div class="property-value">
                                {% if bon.type == 'Sortie' %}
                                    <span class="badge badge-sortie"><i class="bi bi-box-arrow-right me-1"></i>{{ bon.type }}</span>
                                {% elseif bon.type == 'Entrée' %}
                                    <span class="badge badge-entrée"><i class="bi bi-box-arrow-in-right me-1"></i>{{ bon.type }}</span>
                                {% elseif bon.type == 'Livraison' %}
                                    <span class="badge badge-livraison"><i class="bi bi-truck me-1"></i>{{ bon.type }}</span>
                                {% else %}
                                    {{ bon.type }}
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="property-name">Date</div>
                            <div class="property-value">{{ bon.date|date('d/m/Y') }}</div>
                        </div>
                        <div class="col-md-6">
                            <div class="property-name">Numéro de Série</div>
                            <div class="property-value">{{ bon.numeroSerie }}</div>
                        </div>
                        <div class="col-md-6">
                            <div class="property-name">Chantier</div>
                            <div class="property-value">{{ bon.chantier ? bon.chantier.nom : 'Non assigné' }}</div>
                        </div>
                        <div class="col-12">
                            <div class="property-name">Note</div>
                            <div class="property-value">
                                {% if bon.note %}
                                    {{ bon.note|nl2br }}
                                {% else %}
                                    <span class="text-muted fst-italic">Aucune note</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-7">
            <div class="card shadow-sm mb-4 detail-card">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0">Détails des Articles et Machines</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Type</th>
                                    <th>Désignation</th>
                                    <th>Quantité</th>
                                    <th>Unité</th>
                                    <th>Fournisseur</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if bon.bonDetails|length > 0 %}
                                    {% for detail in bon.bonDetails %}
                                        <tr class="item-row">
                                            <td>
                                                {% if detail.article %}
                                                    <span class="badge badge-article">Article</span>
                                                {% elseif detail.machine %}
                                                    <span class="badge badge-machine">Machine</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if detail.article %}
                                                    {{ detail.article.nom }}
                                                    <small class="text-muted d-block">Réf: {{ detail.article.reference }}</small>
                                                {% elseif detail.machine %}
                                                    {{ detail.machine.nom }}
                                                    {% if detail.machine.code %}
                                                        <small class="text-muted d-block">Code: {{ detail.machine.code }}</small>
                                                    {% endif %}
                                                {% endif %}
                                            </td>
                                            <td>{{ detail.quantite }}</td>
                                            <td>{{ detail.unite }}</td>
                                            <td>
                                                {% if detail.fournisseur %}
                                                    {{ detail.fournisseur }}
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">
                                            <i class="bi bi-inbox fs-4 d-block mb-2"></i>
                                            Aucun élément dans ce bon
                                        </td>
                                    </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
