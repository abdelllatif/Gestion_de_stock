<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Bon #{{ bon.numeroSerie }}</title>
    <style>
        body {
            font-family: DejaVu Sans, Arial, sans-serif;
            font-size: 11px;
            color: #333333;
            line-height: 1.3;
        }
        .container {
            width: 100%;
            padding: 5mm;
        }
        .header {
            text-align: center;
            margin-bottom: 5mm;
            padding-top: 5mm;
            border-bottom: 1px solid #e5e7eb;
            padding-bottom: 3mm;
        }
        h1 {
            color: #1e3a8a;
            font-size: 16px;
            margin-bottom: 3mm;
            margin-top: 0;
        }
        h2 {
            color: #3b82f6;
            font-size: 13px;
            margin-top: 5mm;
            margin-bottom: 3mm;
            border-bottom: 1px solid #e5e7eb;
            padding-bottom: 1mm;
        }
        .info-block {
            border: 1px solid #e5e7eb;
            border-radius: 3px;
            padding: 3mm;
            margin-bottom: 3mm;
        }
        .info-row {
            margin-bottom: 1mm;
        }
        .info-label {
            font-weight: bold;
            width: 40%;
            float: left;
        }
        .info-value {
            width: 60%;
            float: left;
        }
        .clearfix::after {
            content: "";
            clear: both;
            display: table;
        }
        .badge {
            display: inline-block;
            padding: 1mm 2mm;
            border-radius: 2mm;
            color: white;
            font-size: 10px;
        }
        .badge-article {
            background-color: #3b82f6;
        }
        .badge-machine {
            background-color: #8b5cf6;
        }
        .badge-sortie {
            background-color: #ef4444;
        }
        .badge-entree {
            background-color: #10b981;
        }
        .badge-livraison {
            background-color: #f59e0b;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 3mm;
            margin-bottom: 3mm;
        }
        th {
            background-color: #f3f4f6;
            border: 1px solid #ddd;
            padding: 1.5mm;
            text-align: left;
            font-weight: bold;
        }
        td {
            border: 1px solid #ddd;
            padding: 1.5mm;
        }
        .footer {
            margin-top: 5mm;
            text-align: center;
            font-size: 9px;
            color: #6b7280;
            border-top: 1px solid #e5e7eb;
            padding-top: 2mm;
        }
        .page-number {
            text-align: center;
            font-size: 9px;
            color: #6b7280;
            margin-top: 2mm;
        }
        .note-section {
            margin-top: 3mm;
            padding: 2mm;
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            border-radius: 3px;
        }
        .centered {
            text-align: center;
        }
  
    </style>
</head>
<body>
    <div class="container">
        <!-- Logo et titre en haut au centre -->
        <div class="header">
           
            
            <h1>Bon {{ bon.type|upper }} #{{ bon.numeroSerie }}</h1>
            <p>Document généré le: {{ "now"|date("d/m/Y") }}</p>
        </div>
        
        <div class="info-block">
            <h2>Informations du Bon</h2>
            
            <div class="info-row clearfix">
                <div class="info-label">Type:</div>
                <div class="info-value">
                    {% if bon.type == 'Sortie' %}
                        <span class="badge badge-sortie">{{ bon.type }}</span>
                    {% elseif bon.type == 'Entrée' %}
                        <span class="badge badge-entree">{{ bon.type }}</span>
                    {% elseif bon.type == 'Livraison' %}
                        <span class="badge badge-livraison">{{ bon.type }}</span>
                    {% else %}
                        {{ bon.type }}
                    {% endif %}
                </div>
            </div>
            
            <div class="info-row clearfix">
                <div class="info-label">Numéro de série:</div>
                <div class="info-value">{{ bon.numeroSerie }}</div>
            </div>
            
            <div class="info-row clearfix">
                <div class="info-label">Date:</div>
                <div class="info-value">{{ bon.date|date('d/m/Y') }}</div>
            </div>
            
            <div class="info-row clearfix">
                <div class="info-label">Chantier:</div>
                <div class="info-value">{{ bon.chantier ? bon.chantier.nom : 'Non assigné' }}</div>
            </div>
            
            <!-- Le fournisseur est géré au niveau des détails, pas du bon lui-même -->
            {% set hasFournisseur = false %}
            {% for detail in bon.bonDetails %}
                {% if detail.fournisseur is defined and detail.fournisseur and not hasFournisseur %}
                    {% set hasFournisseur = true %}
                    <div class="info-row clearfix">
                        <div class="info-label">Fournisseur principal:</div>
                        <div class="info-value">{{ detail.fournisseur }}</div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>

        <h2>Détails des Articles et Machines</h2>
        
        {% if bon.bonDetails|length > 0 %}
            <table>
                <thead>
                    <tr>
                        <th width="15%">Type</th>
                        <th width="40%">Désignation</th>
                        <th width="15%" style="text-align: center;">Quantité</th>
                        <th width="15%" style="text-align: center;">Unité</th>
                        {% if bon.type == 'Livraison' %}
                            <th width="15%">Fournisseur</th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody>
                    {% for detail in bon.bonDetails %}
                        <tr>
                            <td>
                                {% if detail.article %}
                                    <span class="badge badge-article">Article</span>
                                {% elseif detail.machine %}
                                    <span class="badge badge-machine">Machine</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if detail.article %}
                                    <strong>{{ detail.article.nom }}</strong>
                                    <br><small>Réf: {{ detail.article.reference }}</small>
                                {% elseif detail.machine %}
                                    <strong>{{ detail.machine.nom }}</strong>
                                    {% if detail.machine.code %}
                                        <br><small>Code: {{ detail.machine.code }}</small>
                                    {% endif %}
                                {% endif %}
                            </td>
                            <td style="text-align: center;">{{ detail.quantite }}</td>
                            <td style="text-align: center;">{{ detail.unite|default('-') }}</td>
                            {% if bon.type == 'Livraison' %}
                                <td>{{ detail.fournisseur|default('-') }}</td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="info-block" style="text-align: center; font-style: italic; color: #6b7280;">
                Aucun élément dans ce bon.
            </div>
        {% endif %}
        
        {% if bon.note %}
            <div class="note-section">
                <strong>Note :</strong>
                <div>{{ bon.note|nl2br }}</div>
            </div>
        {% endif %}
        
        <div class="footer">
            <p>Document généré le {{ "now"|date("d/m/Y à H:i") }} - Gestion des Matérielles</p>
        </div>
    </div>
</body>
</html>
