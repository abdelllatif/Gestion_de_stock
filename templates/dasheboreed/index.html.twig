                    <a href="/bon" class="btn btn-outline-secondary w-100">Accéder</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm dashboard-card" style="border: none; transition: transform 0.2s;">
                <div class="card-body text-center">
                    <i class="bi bi-archive display-4 text-success mb-3"></i>
                    <h5 class="card-title">Articles</h5>
                    <p class="card-text text-muted">Gérer les articles</p>
                    <a href="/article" class="btn btn-outline-success w-100">Accéder</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}