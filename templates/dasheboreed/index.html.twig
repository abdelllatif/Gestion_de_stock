{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-5 text-center" style="color: #232946; font-family: 'Segoe UI', sans-serif; font-weight: bold; letter-spacing: 1px;">
        Bienvenue sur votre Tableau de bord
    </h1>
    <div class="row g-4">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm dashboard-card" style="border: none; transition: transform 0.2s;">
                <div class="card-body text-center">
                    <i class="bi bi-people display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Utilisateurs</h5>
                    <p class="card-text text-muted">Gérer les utilisateurs du système</p>
                    <a href="/utilisateur" class="btn btn-outline-primary w-100">Accéder</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm dashboard-card" style="border: none; transition: transform 0.2s;">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam display-4 text-info mb-3"></i>
                    <h5 class="card-title">Mouvements de stock</h5>
                    <p class="card-text text-muted">Suivre les mouvements de stock</p>
                    <a href="/stock_movement" class="btn btn-outline-info w-100">Accéder</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm dashboard-card" style="border: none; transition: transform 0.2s;">
                <div class="card-body text-center">
                    <i class="bi bi-gear display-4 text-secondary mb-3"></i>
                    <h5 class="card-title">Machines</h5>
                    <p class="card-text text-muted">Gérer les machines</p>
                    <a href="/machine" class="btn btn-outline-secondary w-100">Accéder</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm dashboard-card" style="border: none; transition: transform 0.2s;">
                <div class="card-body text-center">
                    <i class="bi bi-receipt display-4 text-success mb-3"></i>
                    <h5 class="card-title">Factures</h5>
                    <p class="card-text text-muted">Consulter et créer des factures</p>
                    <a href="/facture" class="btn btn-outline-success w-100">Accéder</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm dashboard-card" style="border: none; transition: transform 0.2s;">
                <div class="card-body text-center">
                    <i class="bi bi-house-door display-4 text-warning mb-3"></i>
