{% extends 'base.html.twig' %}

{% block title %}Ajouter un chauffeur{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 style="color: #232946; font-family: 'Segoe UI', sans-serif; font-weight: bold; letter-spacing: 1px;">
                    <i class="bi bi-person-plus me-2"></i>Ajouter un chauffeur
                </h1>
                <a href="{{ path('app_chauffeur') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>
            
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form id="newChauffeurForm">
                        <div class="mb-3">
                            <label for="chauffeur_nom" class="form-label">Nom complet*</label>
                            <input type="text" class="form-control form-control-lg" id="chauffeur_nom" name="nom" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="chauffeur_licence" class="form-label">Numéro de licence*</label>
                            <input type="text" class="form-control form-control-lg" id="chauffeur_licence" name="licence" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="chauffeur_tele" class="form-label">Numéro de téléphone*</label>
                            <input type="tel" class="form-control form-control-lg" id="chauffeur_tele" name="tele" required>
                        </div>
                        
                        <div class="alert alert-danger d-none" id="form-errors"></div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a href="{{ path('app_chauffeur') }}" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-x-circle me-2"></i>Annuler
                            </a>
                            <button type="button" class="btn btn-primary" id="saveChauffeurBtn">
                                <i class="bi bi-check-circle me-2"></i>Enregistrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    $('#saveChauffeurBtn').on('click', function() {
        const formData = {
            nom: $('#chauffeur_nom').val(),
            licence: $('#chauffeur_licence').val(),
            tele: $('#chauffeur_tele').val()
        };
        
        // Réinitialiser les erreurs précédentes
        $('#form-errors').addClass('d-none').html('');
        
        // Désactiver le bouton pendant la soumission
        const saveBtn = $(this);
        saveBtn.prop('disabled', true);
        saveBtn.html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Enregistrement en cours...');
        
        $.ajax({
            url: '{{ path('app_chauffeur_new') }}',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(formData),
            success: function(response) {
                if (response.success) {
                    // Afficher un message de succès
                    Swal.fire({
                        icon: 'success',
                        title: 'Succès',
                        text: 'Le chauffeur a été ajouté avec succès',
                        timer: 2000,
                        showConfirmButton: false
                    });
                    
                    // Rediriger vers la liste des chauffeurs
                    setTimeout(function() {
                        window.location.href = '{{ path('app_chauffeur') }}';
                    }, 1500);
                }
            },
            error: function(xhr) {
                const response = xhr.responseJSON;
                if (response && response.errors) {
                    // Afficher les erreurs dans l'alerte
                    const errorList = response.errors.map(error => `<li>${error}</li>`).join('');
                    $('#form-errors').removeClass('d-none').html(`<ul class="mb-0">${errorList}</ul>`);
                } else {
                    $('#form-errors').removeClass('d-none').html('Une erreur est survenue. Veuillez réessayer.');
                }
            },
            complete: function() {
                // Réactiver le bouton
                saveBtn.prop('disabled', false);
                saveBtn.html('<i class="bi bi-check-circle me-2"></i>Enregistrer');
            }
        });
    });
});
</script>
{% endblock %}
