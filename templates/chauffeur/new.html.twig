{% extends 'base.html.twig' %}

{% block title %}Ajouter un chauffeur{% endblock %}

{% block body %}
<div class="container-fluid py-5 px-4" style="min-height: calc(100vh - 60px);">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="mb-0" style="color: #232946; font-family: 'Segoe UI', sans-serif; font-weight: bold; letter-spacing: 1px;">Ajouter un chauffeur</h1>
        <a href="/chauffeur" class="btn btn-outline-dark btn-lg d-flex align-items-center gap-2" style="border-radius: 10px; padding: 0.75rem 1.5rem;">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card p-5" style="border: none; border-radius: 16px; background: #f8fafc; min-height: 400px;">
                <form>
                    <div class="row g-4 mb-5">
                        <div class="col-md-4">
                            <label for="numero" class="form-label fw-bold" style="color: #232946; font-size: 1.1rem;">Numéro</label>
                            <input type="text" class="form-control form-control-lg" id="numero" placeholder="Entrez le numéro du chauffeur" required style="border-radius: 10px; padding: 0.75rem; font-size: 1.1rem;">
                        </div>
                        <div class="col-md-4">
                            <label for="prenom" class="form-label fw-bold" style="color: #232946; font-size: 1.1rem;">Prénom</label>
                            <input type="text" class="form-control form-control-lg" id="prenom" placeholder="Entrez le prénom" required style="border-radius: 10px; padding: 0.75rem; font-size: 1.1rem;">
                        </div>
                        <div class="col-md-4">
                            <label for="nom" class="form-label fw-bold" style="color: #232946; font-size: 1.1rem;">Nom</label>
                            <input type="text" class="form-control form-control-lg" id="nom" placeholder="Entrez le nom" required style="border-radius: 10px; padding: 0.75rem; font-size: 1.1rem;">
                        </div>
                    </div>
                    <div class="mb-5">
                        <label for="machine" class="form-label fw-bold mb-3" style="color: #232946; font-size: 1.1rem;">Affecter une machine</label>
                        <select id="machine" class="form-control form-control-lg" required style="border-radius: 10px; padding: 0.75rem; font-size: 1.1rem;">
                            <option value="">Sélectionnez une machine</option>
                            <option value="1">Excavatrice (CAT0320D1234)</option>
                            <option value="2">Grue (LIEB10501234)</option>
                            <option value="3">Bulldozer (KOMA65EX5678)</option>
                        </select>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg" style="background: linear-gradient(90deg, #1e3a8a, #3b82f6); border: none; border-radius: 10px; padding: 0.75rem; font-size: 1.2rem; transition: transform 0.2s, opacity 0.2s;">
                            Ajouter
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %} 