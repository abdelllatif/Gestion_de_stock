{% extends 'base.html.twig' %}

{% block title %}Détails du chauffeur{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 style="color: #232946; font-family: 'Segoe UI', sans-serif; font-weight: bold; letter-spacing: 1px;">
                    <i class="bi bi-person-badge me-2"></i>Détails du chauffeur
                </h1>
                <div>
                    <a href="{{ path('app_chauffeur') }}" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                    </a>
                    <a href="{{ path('app_chauffeur_edit', {'id': chauffeur.id}) }}" class="btn btn-outline-primary">
                        <i class="bi bi-pencil me-2"></i>Modifier
                    </a>
                </div>
            </div>
            
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-md-1 text-center">
                            <i class="bi bi-person-circle text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <div class="col-md-11">
                            <h3 class="mb-0">{{ chauffeur.nom }}</h3>
                            <p class="text-muted mb-0"><small>Identifiant: #{{ chauffeur.id }}</small></p>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-1">Numéro de licence</h6>
                            <p class="mb-0 fs-5 fw-semibold">{{ chauffeur.licence }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-1">Téléphone</h6>
                            <p class="mb-0 fs-5 fw-semibold">
                                <a href="tel:{{ chauffeur.tele }}" class="text-decoration-none">
                                    <i class="bi bi-telephone me-1"></i>{{ chauffeur.tele }}
                                </a>
                            </p>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a href="{{ path('app_chauffeur_edit', {'id': chauffeur.id}) }}" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Modifier ce chauffeur
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
